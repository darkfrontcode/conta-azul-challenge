/* ==========================================================================
	-- CA Radio Style
========================================================================== */

@import $stylus + 'colors'
@import $stylus + 'borders'
@import $stylus + 'keyframes'

ca-radio
	label
		transition border-color .25s
		box-sizing border-box
		padding 2px 0 0 2px
		width 20px
		height 20px
		border 1px solid $colors-gray-search-border
		border-radius $borders-primary
		cursor pointer
		background white

		svg
			width 16px
			height 12px
	
			path
				transition all 1s
				fill none
				stroke-width 3
				stroke-dasharray 20
				stroke-dashoffset 20
				stroke $colors-blue-soft-dark

		input
			display none

	&.active
		label
			border-color $colors-blue-table-hover-border

		svg
			path
				animation checkbox-enter .25s ease forwards