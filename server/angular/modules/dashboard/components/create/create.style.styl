/* ==========================================================================
	-- Create Vehicle Style
========================================================================== */

@import $stylus + 'colors'
@import $stylus + 'inputs'

create
	transform translateX(100%)
	position absolute
	top 0
	right 0
	width 360px
	height 100%
	background $colors-blue-primary

	.content
		flex-direction column
		align-items flex-start
		flex-shrink 0
		flex-wrap nowrap
		overflow-y auto
		transform translateX(100%)
		position absolute
		top 0
		right 0
		width 100%
		height 100%
		background $colors-blue-light-sky

		&::-webkit-scrollbar
			width 6px

		&::-webkit-scrollbar-thumb
			border-radius 6px
			background rgba(0,0,0,.3)

		h2
			box-sizing border-box
			padding 50px 30px

		form
			display flex
			flex-direction column
			flex-wrap nowrap
			flex-shrink 0
			width 100%

			.image-wrapper
				display flex
				justify-content center
				align-items center
				overflow hidden
				height 138px
				background $colors-blue-light-sky-border

				img
					object-fit cover
					width 100%

			.checkbox-wrapper
				box-sizing border-box

				.checkbox-group
					display flex

					.checkbox-item
						display flex
						align-items center
						justify-content flex-start
						width 50%

						ca-radio 
							display flex

							label
								background transparent
								border-width 2px
								border-color $colors-blue-light-sky-border
								padding-top 0

								svg
									path
										stroke white

			.button-wrapper
				display flex
				justify-content space-between
				box-sizing border-box

				button
					width 46%