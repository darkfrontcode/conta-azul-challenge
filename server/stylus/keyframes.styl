/* ==========================================================================
   -- Keyframes
   ========================================================================== */
/* ==========================================================================
   -- Search Bar
   ========================================================================== */


@keyframes search-enter
	from
		opacity .25
		transform scale(1.4)

	to
		opacity 1
		transform scale(1)


/* ==========================================================================
   -- Checkbox
   ========================================================================== */
   

@keyframes checkbox-enter
	from
		stroke-dashoffset 20

	to
		stroke-dashoffset 0